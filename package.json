{
  "name": "fashion-trend-alchemist",
  "version": "1.0.0",
  "private": true,
  "description": "Fashion analytics platform with top/bottom sellers by product type",
  "scripts": {
    "dev:api": "pnpm --filter @fashion/api-lite dev",
    "dev:cli": "pnpm --filter @fashion/cli dev",
    "dev:web": "pnpm --filter @fashion/web dev",
    "dev": "pnpm run dev:api & pnpm run dev:web",
    "build:api": "pnpm --filter @fashion/api build",
    "build:web": "pnpm --filter @fashion/web build",
    "build": "pnpm -r build",
    "test": "pnpm -r test",
    "db:generate": "pnpm --filter @fashion/db generate",
    "db:migrate": "pnpm --filter @fashion/db migrate",
    "db:studio": "pnpm --filter @fashion/db studio",
    "lint": "pnpm -r lint",
    "format": "prettier --write \"**/*.{ts,tsx,json,md}\""
  },
  "devDependencies": {
    "@types/node": "^20.10.6",
    "prettier": "^3.1.1",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "pnpm": {
    "overrides": {
      "drizzle-orm": "0.29.5"
    }
  }
}
