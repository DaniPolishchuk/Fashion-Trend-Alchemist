# Database Configuration
PGHOST=localhost
PGPORT=5432
PGDATABASE=fashion_db
PGUSER=postgres
PGPASSWORD=postgres
PGMAX=10

# SeaweedFS S3 Configuration
S3_ENDPOINT=http://localhost:8333
S3_REGION=us-east-1
S3_ACCESS_KEY_ID=admin
S3_SECRET_ACCESS_KEY=admin
S3_BUCKET=images
S3_PORT=8333

# Application Configuration
NODE_ENV=development
API_PORT=3001
API_HOST=0.0.0.0
LOG_LEVEL=info

# Redis Cache Configuration (optional - caching disabled if not set)
# For local development with Docker: redis://localhost:6379
# For production: redis://user:password@redis-host:6379
REDIS_URL=redis://localhost:6379

# Image Configuration
IMAGE_STRATEGY=filer
IMAGE_URL_EXPIRATION=3600

# SeaweedFS Filer Configuration (when IMAGE_STRATEGY=filer)
FILER_BASE_URL=http://localhost:8888
FILER_BUCKET=images

# LLM Configuration
LLM_API_URL=https://your-llm-endpoint.com/
LLM_API_KEY=your-api-key-here
LLM_MODEL=your-model-name

# RPT-1 Configuration (SAP AI Core)
AI_API_URL=https://api.ai.prod.ap-northeast-1.aws.ml.hana.ondemand.com
AUTH_URL=https://your-auth-url.authentication.region.hana.ondemand.com
CLIENT_ID=your-client-id
CLIENT_SECRET=your-client-secret
RESOURCE_GROUP=generative-ai

# pgAdmin (optional)
PGADMIN_EMAIL=admin@fashion.com
PGADMIN_PASSWORD=admin
